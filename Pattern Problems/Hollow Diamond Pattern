// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
  //  printf("Hello world");
  int n;
  scanf("%d",&n);
  int a = 0;
  int spaces = 0;
  for(int i=1;i<=2*n-1;i++){
        if(i<=n) 
      {
          a=2*i-1;
         spaces = n-i;
        
        
      }
      
      else {
          a-=2;
         spaces++;
      }
        for(int k=0;k<=spaces;k++) {
          printf("  ");
      }
      for(int j=1;j<=a;j++){
          if(j==1 || j==a) printf("* ");
          else printf("  ");
      }
    
      printf("\n");
  }

    return 0;
}
